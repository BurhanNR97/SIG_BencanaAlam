<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:padding="7dp"
            android:background="@drawable/bg_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/listIDwilbanjir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kode"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : "/>
                    <TextView
                        android:id="@+id/listKodekecwilbanjir"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Kode Kecamatan"
                        android:textSize="17sp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Index Aman"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : "/>
                    <TextView
                        android:id="@+id/listindeksamanwilbanjir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Index Ancaman Tidak Berpotensi"
                        android:textSize="17sp"/>

                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Index Rendah"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : "/>
                    <TextView
                        android:id="@+id/listindeksrendahwilbanjir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Index Ancaman Rendah"
                        android:textSize="17sp"/>

                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Index Sedang"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : "/>
                    <TextView
                        android:id="@+id/listindekssedangwilbanjir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Index Ancaman Sedang"
                        android:textSize="17sp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Index Tinggi"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : "/>
                    <TextView
                        android:id="@+id/listindekstinggiwilbanjir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Index Ancaman Tinggi"
                        android:textSize="17sp"/>
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>