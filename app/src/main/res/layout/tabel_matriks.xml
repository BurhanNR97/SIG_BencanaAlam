<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_matriks"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_kecmtn"
            android:layout_width="80dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="Kec"
            android:ellipsize="end"
            android:singleLine="true"
            android:background="@drawable/border_right_bottom"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tv_indexaman"
            android:textAlignment="center"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="Aman"
            android:ellipsize="end"
            android:singleLine="true"
            android:background="@drawable/border_right_bottom"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tv_indexrendah"
            android:textAlignment="center"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="Rendah"
            android:ellipsize="end"
            android:singleLine="true"
            android:background="@drawable/border_right_bottom"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tv_indexsedang"
            android:textAlignment="center"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="Sedang"
            android:ellipsize="end"
            android:singleLine="true"
            android:background="@drawable/border_right_bottom"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tv_indextinggi"
            android:textAlignment="center"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="Tinggi"
            android:ellipsize="end"
            android:singleLine="true"
            android:background="@drawable/border_right_bottom"
            android:textColor="#000"/>
    </LinearLayout>

</LinearLayout>