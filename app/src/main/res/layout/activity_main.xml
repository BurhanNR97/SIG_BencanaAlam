<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_main"
    tools:context=".UI.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PEMETAAN WILAYAH BENCANA ALAM KOTA BAUBAU MENGGUNAKAN METODE K-MEANS"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_marginTop="50sp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/menuBanjir"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:text="Pemetaan\nWilayah Banjir"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/bg_button"/>

        <TextView
            android:id="@+id/menuLongsor"
            android:layout_marginTop="15dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:textAlignment="center"
            android:layout_height="45dp"
            android:text="Pemetaan\nWilayah Longsor"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/bg_button"/>

        <TextView
            android:id="@+id/menuPosko"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="200dp"
            android:gravity="center"
            android:layout_height="45dp"
            android:text="Posko Pengungsian"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/bg_button"/>

        <TextView
            android:id="@+id/menuTentang"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:gravity="center"
            android:layout_height="45dp"
            android:text="Tentang"
            android:textSize="16sp"
            android:foreground="?android:attr/selectableItemBackground"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/bg_button"/>

    </LinearLayout>

    <TextView
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="45dp"
        android:text="Login Administrator"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:onClick="formLogin"
        android:background="@drawable/bg_button1"/>
</RelativeLayout>